extends includes/layout
block main-content
  header.contain-to-grid
    nav.top-bar
      ul.title-area
        li.name
          h1
            a(href="/") Manual App
        li.toggle-topbar.menu-icon
          a(href="#")
            span Menu
      .top-bar-section
        ul.left
          li.divider
          li
            a(href="/") Home
  .row
    .large-9.columns
      div(ng-view)
    aside.large-3.columns(ng-include="'partials/account/side-nav'" ng-controller="LoginCtrl")


  footer
    hr
    .row
      .large-12.columns
        p.text-center &copy; Manual App 2014