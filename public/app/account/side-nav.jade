.panel.radius
  form(ng-hide="identity.isAuthenticated()")
    .row
      .large-12.columns
        .row.collapse.prefix-radius
          .small-3.columns
            span.prefix
              i.fa.fa-user
          .small-9.columns
            input(type="text" placeholder="Username" ng-model="user.username")
      .large-12.columns
        .row.collapse.prefix-radius
          .small-3.columns
            span.prefix
              i.fa.fa-key
          .small-9.columns
            input(type="password" placeholder="Password" ng-model="user.password")
      .large-12.columns
        a.button.radius.expand.small(href="#" ng-click="login(user)")
          i.fa.fa-sign-in
          |    Login
      .large-12.columns
        a.button.radius.expand.small(href="/#/signup")
          i.fa.fa-check-square-o
          |    Sign Up
  ul.side-nav(ng-show="identity.isAuthenticated()")
    li.title
      h4 {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
    li.divider
    li(ng-show="identity.currentUser.isAdmin()")
      a.button.radius.expand.small(href="/#/admin/users")
        i.fa.fa-users
        |   Users
    li
      a.button.radius.expand.small(href="#" ng-click="logout()")
        i.fa.fa-sign-out
        |   Sign Out
  .clearfix